# Development Environment Variables
# Copy this file to .env for local development

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=127.0.0.1
PORT=8080
RUST_LOG=debug
ENVIRONMENT=development

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=mysql://axum:rahasia123@localhost:3306/my_axum_db
DB_HOST=localhost
DB_PORT=3306
DB_NAME=my_axum_db
DB_USER=axum
DB_PASSWORD=rahasia123
DB_MAX_CONNECTIONS=5

# =============================================================================
# SECURITY - JWT CONFIGURATION
# =============================================================================
# Development secret (use a different one in production!)
JWT_SECRET=dev-secret-key-minimum-32-characters-long-for-development
JWT_EXPIRATION=3600

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Development: Allow localhost origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# Alternative: Allow all for development (⚠️ Less secure)
# CORS_ORIGINS=*

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_BASE_PATH=./uploads
UPLOAD_MAX_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif

# =============================================================================
# FEATURES CONFIGURATION
# =============================================================================
AUTO_CREATE_USER=true
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=Admin@123
USER_TRACKING_ENABLED=true
KANTOR_REQUIRED=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=debug
LOG_FORMAT=pretty
LOG_OUTPUT=stdout

# =============================================================================
# RATE LIMITING
# =============================================================================
# Disabled or relaxed for development
RATE_LIMIT_ENABLED=false
RATE_LIMIT_REQUESTS_PER_MIN=1000
RATE_LIMIT_BURST=100

# =============================================================================
# MONITORING & HEALTH CHECK
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENABLED=true
