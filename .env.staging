# Staging Environment Variables
# Copy this file to .env for staging environment

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8080
RUST_LOG=info
ENVIRONMENT=staging

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=mysql://axum:staging_password@localhost:3306/my_axum_db_staging
DB_HOST=localhost
DB_PORT=3306
DB_NAME=my_axum_db_staging
DB_USER=axum
DB_PASSWORD=staging_password
DB_MAX_CONNECTIONS=8

# =============================================================================
# SECURITY - JWT CONFIGURATION
# =============================================================================
# ⚠️ Use a different secret from production!
JWT_SECRET=staging-secret-key-minimum-32-characters-long-change-this
JWT_EXPIRATION=3600

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Staging: Allow staging domains + localhost for testing
CORS_ORIGINS=http://staging.synergyinfinity.id,https://staging.synergyinfinity.id,http://localhost:3000,http://localhost:5173

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_BASE_PATH=./uploads
UPLOAD_MAX_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif

# =============================================================================
# FEATURES CONFIGURATION
# =============================================================================
AUTO_CREATE_USER=true
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=Admin@123
USER_TRACKING_ENABLED=true
KANTOR_REQUIRED=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MIN=100
RATE_LIMIT_BURST=20

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
APACHE_SERVER_NAME=staging.synergyinfinity.id
APACHE_PROXY_PORT=80
SSL_ENABLED=true
SYSTEMD_USER=www-data
SYSTEMD_GROUP=www-data
SYSTEMD_WORKING_DIR=/www/wwwroot/axum-backend-staging

# =============================================================================
# MONITORING & HEALTH CHECK
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENABLED=true
