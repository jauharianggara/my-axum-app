# Production Environment Variables
# Copy this file to .env and update with your production values
# NEVER commit .env file to version control!

# =============================================================================
# SERVER CONFIGURATION
# =============================================================================
HOST=0.0.0.0
PORT=8080
RUST_LOG=info
ENVIRONMENT=production

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=mysql://axum:rahasia123@localhost:3306/my_axum_db
DB_HOST=localhost
DB_PORT=3306
DB_NAME=my_axum_db
DB_USER=axum
DB_PASSWORD=rahasia123
DB_MAX_CONNECTIONS=10

# =============================================================================
# SECURITY - JWT CONFIGURATION
# =============================================================================
# ⚠️ CRITICAL: Generate a strong secret (min 32 characters)
# Use: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# JWT token expiration in seconds (default: 3600 = 1 hour)
JWT_EXPIRATION=3600

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
# Choose ONE option below:

# Option 1: WILDCARD - Allow all origins (⚠️ NOT RECOMMENDED for production)
# CORS_ORIGINS=*

# Option 2: SPECIFIC ORIGINS - Production domains (✅ RECOMMENDED)
CORS_ORIGINS=http://nextjs.synergyinfinity.id,https://nextjs.synergyinfinity.id,http://axum.synergyinfinity.id,https://axum.synergyinfinity.id

# Option 3: DEVELOPMENT - Local testing
# CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000

# Option 4: COMBINED - Production + Development
# CORS_ORIGINS=http://nextjs.synergyinfinity.id,https://nextjs.synergyinfinity.id,http://localhost:3000,http://localhost:5173

# Option 5: MULTIPLE ENVIRONMENTS
# CORS_ORIGINS=http://nextjs.synergyinfinity.id,https://nextjs.synergyinfinity.id,http://staging.synergyinfinity.id,https://staging.synergyinfinity.id,http://localhost:3000

# =============================================================================
# FILE UPLOAD CONFIGURATION
# =============================================================================
UPLOAD_BASE_PATH=./uploads
UPLOAD_MAX_SIZE=5242880
ALLOWED_EXTENSIONS=jpg,jpeg,png,gif
ALLOWED_MIME_TYPES=image/jpeg,image/png,image/gif

# =============================================================================
# FEATURES CONFIGURATION
# =============================================================================
# Auto-create default admin user on first run
AUTO_CREATE_USER=true
DEFAULT_USERNAME=admin
DEFAULT_PASSWORD=Admin@123

# User tracking (created_by, updated_by fields)
USER_TRACKING_ENABLED=true

# Kantor validation
KANTOR_REQUIRED=true

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_OUTPUT=stdout

# =============================================================================
# RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MIN=60
RATE_LIMIT_BURST=10

# =============================================================================
# DEPLOYMENT CONFIGURATION
# =============================================================================
# Apache reverse proxy settings
APACHE_SERVER_NAME=axum.synergyinfinity.id
APACHE_PROXY_PORT=80
SSL_ENABLED=true

# Systemd service settings
SYSTEMD_USER=www-data
SYSTEMD_GROUP=www-data
SYSTEMD_WORKING_DIR=/www/wwwroot/axum-backend

# =============================================================================
# MONITORING & HEALTH CHECK
# =============================================================================
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENABLED=false
